        "def colored(text, color_code):\n",
        "    return f\"\\033[{color_code}m{text}\\033[0m\"\n",
        "\n",
        "def main():\n",
        "    print(colored(\"1 大事な情報\", \"96\"))\n",
        "    print(colored(\"2 大事な情報\", \"90\"))\n",
        "    choice = input(\"\\nどちらがハッキングしやすそうですか？(1/2): \")\n",
        "\n",
        "    if choice == \"1\":\n",
        "        print(\"\\nログイン情報が必要です\")\n",
        "        user_id = input(\"ID: \")\n",
        "        password = input(\"パスワード: \")\n",
        "        print(f\"\\nID: {user_id}, パスワード: {password} を入力しました\")\n",
        "        print(\"ログイン成功！\")\n",
        "    elif choice == \"2\":\n",
        "        print(\"\\n突破しました！\")\n",
        "    else:\n",
        "        print(\"\\n無効な選択です\")\n",
        "\n",
        "if __name__ == \"__main__\":\n",
        "    main()"
      ]
    }
  ]
